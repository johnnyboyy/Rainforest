<%= form_for(@product) do |f| %>

	<div class="field">
	 	<%= f.label :name %></div><br />
	 	<%= f.text_field :name %>
	</div>

	<div class="field">
	 	<%= f.label :description %></div><br />
	 	<%= f.text_area :description %>
	</div>

	<div class="field">
	 	<%= f.label :price_in_cents %></div><br />
	 	<%= f.number_field :price_in_cents %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>